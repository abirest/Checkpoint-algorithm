ALGORITHM SENTENCE
VAR
    nbc,nbw,nbv:= INTEGER;
    SENTENCE:= STRING;
BEGIN
    nbc:=0;
    nbw:=1;
    nbv:= 0;
    WRITE(SENTENCE)
    READ(SENTENCE)
REPEAT
    IF (SENTENCE[nbc=" "]) THEN
    nbw:=nbw+1;
    END_IF
    IF (SENTENCE[nbc] in ["a","e","u","i","o","y"]) THEN
        nbv:= nbv+1;
    END_IF
    nbc:= nbc+1;
UNTIL (SENTENCE[nbc]=".")

WRITE("The number of characters is",nbc+1)
WRITE("The number of words in the sentence is",nbw)
WRITE("The number of vowels is",nbv)

END